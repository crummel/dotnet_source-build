<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Repo Version Information -->
  <PropertyGroup>
    <VersionPrefix>0.1.0</VersionPrefix>
    <PreReleaseVersionLabel>alpha.1</PreReleaseVersionLabel>
    <VersionSuffix>3.1.100-$(PreReleaseVersionLabel)</VersionSuffix>
    <VersionSuffix Condition="'$(BUILD_BUILDNUMBER)' != ''">$(VersionSuffix).$(BUILD_BUILDNUMBER)</VersionSuffix>
    <VersionSuffix Condition="'$(BUILD_SOURCEVERSION)' != ''">$(VersionSuffix)+$(BUILD_SOURCEVERSION)</VersionSuffix>
    <VersionSuffix Condition="'$(BUILD_SOURCEVERSION)' == '' and '$(GitCommitHash)' != ''">$(VersionSuffix)+$(GitCommitHash)</VersionSuffix>
    <SourceBuildOutputVersion>$(VersionPrefix)-$(VersionSuffix)</SourceBuildOutputVersion>
  </PropertyGroup>
  <!-- Production Dependencies -->
  <PropertyGroup>
    <PrivateSourceBuildReferencePackagesPackageVersion>1.0.0-beta.19577.2</PrivateSourceBuildReferencePackagesPackageVersion>
    <PrivateSourceBuiltArtifactsPackageVersion>0.1.0-3.1.100-preview3.dev.19571.1</PrivateSourceBuiltArtifactsPackageVersion>
  </PropertyGroup>
</Project>
